<h1>Listing roles</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%= role.name %></td>
    <td>
      <div class="btn-group">
        <a href="#" class="btn dropdown-toggle" data-toggle="dropdown">Action<span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><%= link_to 'Show', admin_role_path(role) %></li>
          <li><%= link_to 'Edit', edit_admin_role_path(role) %></li>
          <li><%= link_to 'Destroy', admin_role_path(role), method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </ul>
      </div>      
    </td>


  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Role', new_admin_role_path %>
